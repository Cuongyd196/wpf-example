<Window x:Class="Menu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Menu.control"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <!-- Menu Panel -->
        <StackPanel DockPanel.Dock="Left" Width="200" Background="#FF333940">
            <Button x:Name="btnTrangChu" Content="Trang chủ" Height="50" Click="btnTrangChu_Click"  />
            <Button x:Name="btnLoaiSach" Content="Quản lý loại sách" Height="50" Click="btnLoaiSach_Click"  />
            <Button x:Name="btnGioiThieu" Content="Giới thiệu ứng dụng" Height="50" Click="btnGioiThieu_Click"  />
            <!-- Thêm các nút khác tại đây -->
        </StackPanel>
        <!-- Main Content -->
        <ContentControl x:Name="MainContent">
            <!-- Nội dung chính của ứng dụng sẽ được đặt ở đây -->
            <local:TrangChuUserControl/>
        </ContentControl>
    </DockPanel>
</Window>
