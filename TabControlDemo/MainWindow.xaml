<Window x:Class="TabControlDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TabControlDemo.control"
        xmlns:uc="clr-namespace:TabControlDemo.control"
        mc:Ignorable="d"
        Title="Phần mềm quản lý sách" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="450" Width="800" Margin="0,0,0,0" VerticalAlignment="Top">
            <TabItem Header="Sách" Height="30" Width="150">
                <uc:SachUserControl/>
            </TabItem>
            <TabItem Header="Loại sách" Height="30" Width="150">
                <uc:LoaiSachUserControl/>
            </TabItem>
            <TabItem Header="Người dùng" Height="30" Width="150">
                <uc:NguoiDungUserControl/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
