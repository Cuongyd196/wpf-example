<Window x:Class="UserControlDemo2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserControlDemo2.control"
        xmlns:uc ="clr-namespace:UserControlDemo2.control"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <TextBlock Margin="10" HorizontalAlignment="Center" Text="Ví dụ về UserControl" FontWeight="Bold" FontSize="20"></TextBlock>
        <Button x:Name="btnHome" Margin="10" Content="HomeScreen" Width="200" Height="50" Click="btnHome_Click">
        </Button>
        <Button x:Name="btnScreen1" Margin="10" Content="Screen1" Width="200" Height="50" Click="btnScreen1_Click">
        </Button>
        <Button x:Name="btnScreen2" Margin="10" Content="Screen2" Width="200" Height="50" Click="btnScreen2_Click">
        </Button>
    </StackPanel>
</Window>
